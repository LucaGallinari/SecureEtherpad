{
  "manifest_version": 2,
  "name": "Secure Etherpad",
  "author": "Luca Gallinari",
  "version": "0.1.0",

  "description": "Provide a simple encryption mechanism for Etherpad",
  "icons": {
    "128": "images/icon512.png",
    "512": "images/icon512.png"
  },

  "browser_action" : {
    "default_icon" : "images/icon512-disabled.png",
    "default_title" : "Secure Etherpad",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/setup.js",
        "scripts/xhook.js",
        "scripts/json3.min.js",
        "scripts/modified-socket.io.js",
        "scripts/monkey_patcher.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "minimum_chrome_version": "23"
}