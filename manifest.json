{
  "manifest_version": 2,
  "name": "Secure Etherpad",
  "version": "0.1.0",

  "description": "Provide a simple encryption mechanism for Etherpad",
  "icons": {
    "128": "images/icon512.png",
    "512": "images/icon512.png"
  },

  "browser_action" : {
    "default_icon" : "images/icon512.png",
    "default_title" : "Secure Etherpad",
    "default_popup": "views/popup.html"
  },

  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.oasis.sandstorm.io/*",
        "https://*.oasis.sandstorm.io/*"
      ],
      "js": [
        "scripts/xhook.js",
        "scripts/json3.min.js",
        "scripts/modified-socket.io.js",
        "scripts/websocket_monkey_patch.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "http://*.oasis.sandstorm.io/*",
    "https://*.oasis.sandstorm.io/*"
  ],
  "minimum_chrome_version": "23"
}